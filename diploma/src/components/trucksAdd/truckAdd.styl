.truck_add_menu
    transition: 0.5s
    transform: scale(0.8)
    border-radius: 1vh
    width: 25vw
    height: 70vh
    background: #171C23
    filter: drop-shadow(0 1.5vh 1vh #00000080);
    overflow: hidden
.add_truck_img
    overflow: hidden
    position relative
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    width: 100%
    height: 39vh
    background: #1F2833
.file_text
    color #45A29E
    font-weight: 600
    font-size 2vh
.truck_file
    opacity 0
    cursor pointer
    position: absolute
    top 0
    left 0
    width: 100%
    height: 100%
.uploaded_image
    width: 100%
.gradient
    width: 100%
    height: 100%
    position: absolute
    background: linear-gradient(0deg, rgba(23,28,35,1) 0%, rgba(0,212,255,0) 30%);


.barnd_model_inputs
    margin-top 7vh
    width: 100%
    display: flex
    justify-content: space-around
.trucks_inputs
    padding: 0 0 0 1vh
    box-sizing: border-box
    border none
    outline: none
    height: 4vh
    border-radius: 0.5vh
    background: #1F2833
    filter: drop-shadow(0 0.5vh .14vh #00000020);
    color: #45A29E
.trucks_inputs::placeholder
    color #45a29da2
.license_fuel_inputs
    margin-top 4vh
    width: 100%
    display: flex
    justify-content: space-around

