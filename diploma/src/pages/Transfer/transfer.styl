.transfer_page
    display: flex
    width 100%
    height: 100%
    overflow: hidden
.transfer_right
    overflow: hidden
    width: 100%
    padding: 3vh 3vw 0 3vw;
    box-sizing: border-box
.transfer_window
    width 100%
    height:79vh
    margin 5vh 0 0 0
    overflow-y: scroll
    display: flex
    
    gap 10vh
    flex-wrap: wrap
.transfer_window::-webkit-scrollbar {
  display: none
}

.transfer_add_btn
    width 8vw
    height: 5vh
    display: flex
    justify-content: center
    align-items: center
    color: #66FCF1
    font-weight: bold
    font-size: 1.8vh
    background: #1F2833
    border-radius: 0.5vh
    border 0.3vh solid #66FCF1
    transition: 0.2s
.transfer_add_btn:hover
    background: #66FCF1
    color #1F2833
.car_client_info
    width 100%
    padding 0 1vw
    box-sizing: border-box
.t_truck_info
    text-align: start
    display: block
.i_heading
    color white
