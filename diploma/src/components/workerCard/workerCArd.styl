.worker_card
    width: 100%
    height: 10vh
    background: #1F2833
    border-radius: 0.5vh
    padding: 1.5vh 1.5vh
    box-sizing: border-box
    display: flex
    justify-content: space-between
    align-items center
.w_img_con
    overflow: hidden
    width: 7vh
    height 7vh
    background: #141A21
    display: flex
    justify-content: center
    align-items: center
    border-radius: 0.5vh
.w_line
    height: 100%
    width: 0.2vh
    background: #141A21
.w_name
    font-family: Inter
    font-weight: 500
    color #66FCF1
    background: #141A21
    height: 7vh
    border-radius: 0.5vh
    display: flex
    justify-content: center
    align-items: center
    padding: 0 1vw
.w_control_card
    display: flex
    gap 3vh
    justify-content: center
    align-items: center
.w_control_card img
    cursor: pointer
.w_img
    width: 100%
.fav_worker_btn
    position relative
    display: flex
    justify-content: center
    align-items: center
.fav_w_a
    position: absolute
    transition: 0.2s
    opacity 0
.fav_worker_btn:hover .fav_w_a
    opacity 1 !important